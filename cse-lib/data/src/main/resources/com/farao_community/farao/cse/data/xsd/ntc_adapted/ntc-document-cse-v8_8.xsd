	<xs:simpleType name="TDaynumType">
		<xs:annotation>
			<xs:documentation>only some string allowed here, not a free text</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:byte">
			<xs:minInclusive value="0"/>
			<xs:maxInclusive value="10"/>
		</xs:restriction>
	</xs:simpleType>
	<!--_____________________TDescriptionType__________________ -->
	<xs:simpleType name="TDescriptionType">
		<xs:annotation>
			<xs:documentation>only some string allowed here, not a free text</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string">
			<xs:enumeration value="Everyday">
				<xs:annotation>
					<xs:documentation>Every day of the week (from Monday to Sunday)</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Monday">
				<xs:annotation>
					<xs:documentation>Only Monday</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Tuesday">
				<xs:annotation>
					<xs:documentation>Only Tuesday</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Wednesday">
				<xs:annotation>
					<xs:documentation>Only Wednesday</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Thursday">
				<xs:annotation>
					<xs:documentation>Only Thursday</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Friday">
				<xs:annotation>
					<xs:documentation>Only Friday</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Saturday">
				<xs:annotation>
					<xs:documentation>Only Saturday</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Sunday">
				<xs:annotation>
					<xs:documentation>Only Sunday</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Mon-Fri">
				<xs:annotation>
					<xs:documentation>Monday to Friday</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Mon-Sat">
				<xs:annotation>
					<xs:documentation>From Monday to Saturday</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Sat-Sun">
				<xs:annotation>
					<xs:documentation>From Monday to Saturday</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
		</xs:restriction>
	</xs:simpleType>
	<!--_____________________THourMinuteUTCType______________ -->
	<xs:simpleType name="THourMinuteUTCType">
		<xs:annotation>
			<xs:documentation>ISO 8601 format: [T]hh:mmZ</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:token">
			<xs:pattern value="T([0-1][0-9]|2[0-4]):[0-5][0-9]Z"/>
		</xs:restriction>
	</xs:simpleType>
	<!--________________________DateTimeUTCType__________________ -->
	<xs:simpleType name="DateTimeUTCType">
		<xs:annotation>
			<xs:documentation>The time must be expressed in a form respecting ISO 8601 : YYYY-MM-DDTHH:MMZ. ISO 8601 rules for reduction may apply. The time must always be expressed in UTC.</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:token">
			<xs:pattern value="[2][0][0-9][0-9][\-][0-1][0-9][\-][0-3][0-9][T][0-2][0-9][:][0-6][0-9][Z]"/>
		</xs:restriction>
	</xs:simpleType>
	<!--________________________DateUTCType__________________ -->
	<xs:simpleType name="DateUTCType">
		<xs:annotation>
			<xs:documentation>ISO 8601 format: YYYY-MM-DDZ</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:token">
			<xs:pattern value="[0-9]{4}-(((0[13578]-(0[1-9]|[12][0-9]|3[01]))|(1[02]-(0[1-9]|[12][0-9]|3[01])))|((0[469]-(0[1-9]|[12][0-9]|30))|(11-(0[1-9]|[12][0-9]|30)))|(02-(0[1-9]|1[0-9]|2[0-9])))Z"/>
		</xs:restriction>
	</xs:simpleType>
</xs:schema>
