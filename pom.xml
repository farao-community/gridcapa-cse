<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>farao-parent</artifactId>
        <groupId>com.farao-community.farao</groupId>
        <version>1.0.10</version>
    </parent>

    <artifactId>gridcapa-cse</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>GridCapa CSE</name>
    <description>A full suite to perform capacity calculations on CSE zone</description>

    <scm>
        <connection>scm:git:https://github.com/farao-community/gridcapa-cse.git</connection>
        <developerConnection>scm:git:https://github.com/farao-community/gridcapa-cse.git</developerConnection>
        <url>https://github.com/farao-community/gridcapa-cse.git</url>
    </scm>

    <modules>
        <module>gridcapa-cse-lib</module>
        <module>gridcapa-cse-api</module>
    </modules>

    <properties>
        <!-- Dependencies versions -->
        <commons.lang.version>3.11</commons.lang.version>
        <maven.jaxb2.version>0.14.0</maven.jaxb2.version>
        <maven.jvnet.jaxb2-basics.version>1.11.1</maven.jvnet.jaxb2-basics.version>

        <jaxb-api.version>2.4.0-b180830.0359</jaxb-api.version>
        <jaxb-runtime.version>2.4.0-b180830.0438</jaxb-runtime.version>
        <jsonapi.converter.version>0.10</jsonapi.converter.version>

        <farao.bom.version>1.0.10</farao.bom.version>
    </properties>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.jvnet.jaxb2.maven2</groupId>
                    <artifactId>maven-jaxb2-plugin</artifactId>
                    <version>${maven.jaxb2.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.github.jasminb</groupId>
                <artifactId>jsonapi-converter</artifactId>
                <version>${jsonapi.converter.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${commons.lang.version}</version>
            </dependency>
            <dependency>
                <groupId>javax.xml.bind</groupId>
                <artifactId>jaxb-api</artifactId>
                <version>${jaxb-api.version}</version>
            </dependency>

            <!-- RUNTIME -->
            <dependency>
                <groupId>org.glassfish.jaxb</groupId>
                <artifactId>jaxb-runtime</artifactId>
                <version>${jaxb-runtime.version}</version>
                <scope>runtime</scope>
            </dependency>

            <dependency>
                <groupId>com.farao-community.farao</groupId>
                <artifactId>farao-bom</artifactId>
                <version>${farao.bom.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
